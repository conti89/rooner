<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <QuickContactBadge
        android:id="@+id/personal_results_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

    <Button
        android:id="@+id/personalResults_friendResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/celeste_roonner"
        android:text="@string/your_friend" />

    <TextView
        android:id="@+id/personal_results_dis_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/verde_roonner"
        android:text="        Distance"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/personal_results_spd_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/personal_results_dis_txt"
        android:layout_alignBottom="@+id/personal_results_dis_txt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:background="@color/verde_roonner"
        android:text="Speed"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/personal_results_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/personal_results_pic"
        android:layout_below="@+id/personal_results_dis_txt"
        android:layout_marginRight="14dp"
        android:textSize="20sp"
        android:text="1942 mts" />

    <TextView
        android:id="@+id/personal_results_vel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/personal_results_dis"
        android:layout_alignBottom="@+id/personal_results_dis"
        android:layout_alignRight="@+id/personal_results_spd_txt"
        android:text="10 m/s"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/personal_results_dur_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/personal_results_pic"
        android:layout_marginTop="19dp"
        android:background="@color/verde_roonner"
        android:gravity="center"
        android:text="Duration (Started at 5:39 PM)"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/personal_results_dur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_results_dur_txt"
        android:layout_centerHorizontal="true"
        android:text="01:21:53" 
        android:textSize="20sp"/>


    <ImageView
        android:id="@+id/personal_map"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/personalResults_friendResults"
        android:layout_alignParentLeft="true"
        android:src="@drawable/map_cristobal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/personal_results_pic"
        android:layout_above="@id/personal_results_dur_txt">"

        <TextView
            android:id="@+id/personal_results_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
            android:text="Cristobal"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/personalResults_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personal_results_name"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Santiago,Chile \nCurrent Time: 6:15PM" />

    </RelativeLayout>

</RelativeLayout>