<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
      <QuickContactBadge
        android:id="@+id/friend_results_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/duran" />

    <TextView
        android:id="@+id/friend_results_dis_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/verde_roonner"
        android:text="        Distance"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friend_results_spd_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/friend_results_dis_txt"
        android:layout_alignBottom="@id/friend_results_dis_txt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:background="@color/verde_roonner"
        android:text="Speed"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friend_results_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/friend_results_pic"
        android:layout_below="@id/friend_results_dis_txt"
        android:layout_marginRight="14dp"
        android:textSize="20sp"
        android:text="1942 mts" />

    <TextView
        android:id="@+id/friend_results_vel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/friend_results_dis"
        android:layout_alignBottom="@id/friend_results_dis"
        android:layout_alignRight="@id/friend_results_spd_txt"
        android:text="10 m/s"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friend_results_dur_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/friend_results_pic"
        android:layout_marginTop="19dp"
        android:background="@color/verde_roonner"
        android:gravity="center"
        android:text="Duration"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friend_results_pac_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/friend_results_dis"
        android:layout_marginTop="29dp"
        android:background="@color/verde_roonner"
        android:text="        Pace"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friend_results_dur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/friend_results_dur_txt"
        android:layout_centerHorizontal="true"
        android:text="01:21:53" 
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/friend_results_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/friend_results_vel"
        android:layout_below="@id/friend_results_pac_txt"
        android:text="100 cal"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friend_results_pac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/friend_results_cal"
        android:layout_alignBottom="@id/friend_results_cal"
        android:layout_alignLeft="@id/friend_results_dis"
        android:text="10 s/m"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friend_results_cal_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/friend_results_cal"
        android:layout_alignRight="@+id/friend_results_cal"
        android:background="@color/verde_roonner"
        android:text="Calories"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friend_results_name"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/friend_results_dur"
        android:layout_alignParentTop="true"
        android:text="Cristobal Duran"
        android:textSize="40sp" />

</RelativeLayout>