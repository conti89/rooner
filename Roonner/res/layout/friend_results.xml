<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <QuickContactBadge
        android:id="@+id/friend_results_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/duran" />

    <TextView
        android:id="@+id/friend_results_spd_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/friend_results_dis_txt"
        android:layout_alignBottom="@id/friend_results_dis_txt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:background="@color/verde_roonner"
        android:text="Speed"
        android:textStyle="bold"
        android:textColor="@color/blanco"
        
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friend_results_vel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/friend_results_dis"
        android:layout_alignBottom="@id/friend_results_dis"
        android:layout_alignRight="@id/friend_results_spd_txt"
        android:text="10 m/s"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friend_results_dur_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/friend_results_pic"
        android:layout_marginTop="19dp"
        android:background="@color/verde_roonner"
        android:textColor="@color/blanco"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Duration"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friend_results_dur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/friend_results_dur_txt"
        android:layout_centerHorizontal="true"
        android:text="01:21:53"
        android:textSize="20sp" />

    <Button
        android:id="@+id/encourage"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/encourage" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/friend_results_dur_txt"
        android:layout_toRightOf="@id/friend_results_pic" >

        <TextView
            android:id="@+id/friend_results_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Friend"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/friendResults_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friend_results_name"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Santiago,Chile \nCurrent Time: 6:15PM" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/friend_map"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/encourage"
        android:layout_alignLeft="@+id/encourage"
        android:scaleType="fitXY"
        android:layout_marginBottom ="10dp"
        android:src="@drawable/map_friend" />

    <TextView
        android:id="@+id/friend_results_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/friend_results_dur"
        android:text="1942 mts"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friend_results_dis_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/friend_results_vel"
        android:layout_alignLeft="@+id/friend_results_dur_txt"
        android:background="@color/verde_roonner"
        android:text="        Distance"
        android:textColor="@color/blanco"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/friend_results_spd_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/friend_results_dis_txt"
        android:layout_alignBottom="@id/friend_results_dis_txt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:background="@color/verde_roonner"
        android:text="Speed"
        android:textStyle="bold"
        android:textColor="@color/blanco"
        
        android:textSize="20sp" />

</RelativeLayout>