<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp" >

    <Button
        android:id="@+id/buddies_options"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/azul_roonner"
        android:text="@string/options" />

    <Button
        android:id="@+id/buddies_listBuddies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buddies_options"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="110dp"
        android:text="@string/my_buddies" />

    <Button
        android:id="@+id/buddies_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buddies_listBuddies"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="38dp"
        android:text="@string/new_roonner" />

    <Button
        android:id="@+id/buddies_solo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buddies_options"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="27dp"
        android:text="@string/solo" />

    <TextView
        android:id="@+id/buddies_roon_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buddies_roonner"
        android:layout_alignRight="@+id/buddies_profile"
        android:layout_marginRight="16dp"
        android:background="@drawable/bubble"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/buddies_speech"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/buddies_roonner"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/buddies_profile"
        android:layout_marginBottom="61dp"
        android:layout_toLeftOf="@+id/buddies_roon_speech"
        android:src="@drawable/roon_icon" />

</RelativeLayout>