<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignRight="@+id/how_long"
        android:layout_marginRight="44dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/bubble"
        android:gravity="center"
        android:text="@string/welcome"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/main_roonner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="101dp"
        android:layout_toLeftOf="@+id/welcome"
        android:src="@drawable/roon_icon" />

    <Button
        android:id="@+id/how_much"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_roonner"
        android:layout_marginTop="47dp"
        android:background="@color/verde_roonner"
        android:text="@string/how_much" />

    <Button
        android:id="@+id/how_long"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/how_much"
        android:layout_below="@+id/Or"
        android:layout_marginTop="28dp"
        android:background="@color/verde_roonner"
        android:text="@string/how_long" />

    <TextView
        android:id="@+id/Or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/how_much"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/or"
        android:textSize="20sp" />

</RelativeLayout>